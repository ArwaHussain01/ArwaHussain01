#include<bits/stdc++.h>
using namespace std;
int frogjump2(vector<int> &heights,int n)
{
  vector<int>dp(n,0);
  dp[0]=0;
  for(int i=1;i<n;i++)
  {
      int fs=dp[i-1]+abs(heights[i]-heights[i-1]);
      int ss=INT_MAX;
      if(i>1)
      {
          ss=dp[i-2]+abs(heights[i]-heights[i-2]);
      }
      dp[i]=min(fs,ss);
  }
  return dp[n-1]; 
}
int main()
{
  vector<int>heights;
  int n;
  cin>>n;
  int a;
  for(int i=0;i<n;i++)
  {
    cin>>a;
    heights.push_back(a);
  }
  int c=frogjump2(heights,n);
  cout<<c;
}
