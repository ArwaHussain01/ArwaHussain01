#include<bits/stdc++.h>
using namespace std;
int frogjump2(vector<int> &heights,int k,int n)
{
  vector<int>dp(n,0);
  dp[0]=0;
  for(int i=1;i<n;i++)
  {
    int minsteps=INT_MAX;
    for(int j=1;j<=k&&i>=j;j++)
    {
      
      if(i-j>=0)
      {
       int jump=dp[i-j]+abs(heights[i]-heights[i-j]);
        minsteps=min(minsteps,jump);
      }
      
    }
    dp[i]=minsteps;
    
  }
  return dp[n-1]; 
}
int main()
{
  vector<int>heights;
  int n;
  cin>>n;
  int k;
  cin>>k;
  int a;
  for(int i=0;i<n;i++)
  {
    cin>>a;
    heights.push_back(a);
  }
  int c=frogjump2(heights,k,n);
  cout<<c;
}
